<div class="profile-header header">

</div>
<% if current_user %>
<div class="owned-events events-section">
    <h1 class="section-header">My Events</h1>
    <% if @owned_events.any? %>
      <% @owned_events.each do |event| %>
        <div class="owned_event event row">
         <div style="background-image: url(<%= url_for(event.cover_image)%>)" class="event-card-image"> 

         </div>
           
         <div class="event-card-right column">
          <%= render  "event_card", event: event %>
         </div>
        </div>
      <% end %>
    <% else %>
        <p class="empty-section-text">You have no events. <%= link_to  "Create one now", new_event_path %></p>
    <% end %>
  </div>
<% end %>

<div class="upcoming_events events-section">
    <h1 class="section-header">Upcoming Events</h1>
    <% if @upcoming_events.any? %>
      <% @upcoming_events.each do |event| %>
        <div class="upcoming-event event row">
            <div style="background-image: url(<%= url_for(event.cover_image)%>)" class="event-card-image"> 

            </div>
              
            <div class="event-card-right column">
              <%= render  "event_card", event: event %>
            </div>
        </div>
      <% end %>
    <% else %>
        <p class="empty-section-text">You have no upcoming events.</p>
    <% end %>
  </div>

<div class="past-events events-section">
    <h1 class="section-header">Past Events</h1>
    <% if @past_events.any? %>
      <% @past_events.each do |event| %>
        <div class="past-event event">
            <div style="background-image: url(<%= url_for(event.cover_image)%>)" class="event-card-image"> 

              </div>
                
              <div class="event-card-right column">
               <%= render  "event_card", event: event %>
              </div>
        </div>
      <% end %>
    <% else %>
      <p class="empty-section-text">You haven't been invited to any events that have passed</p>
    <% end %>
  </div>


