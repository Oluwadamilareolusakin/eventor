<div class="form">
  <%= form_for(@user) do |f| %>
    <h1 class="form-header">
      <%= yield(:form_title) %>
    </h1>
    <div class="fields">
      <%= f.text_field :name, placeholder: 'Full Name' %>
    </div>
    
    <div class="fields">
      <%= f.email_field :email, placeholder: 'Email Address' %>
    </div>

    <div class="fields">
      <%= f.text_field :username, placeholder: 'Username' %>
    </div>

    <div class="actions">
      <%= f.submit yield(:button_text)%>
    </div>
  <% end %>
</div>