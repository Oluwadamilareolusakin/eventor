<%= provide(:form_title, 'Login') %>
<%= provide(:button_text, 'Login') %>
<div class="form create-form column login-form">
  <%= form_for(:session, url: login_path) do |f| %>
    <h1><%= yield(:form_title) %></h1>
    <div class="fields">
      <%= f.email_field :email, placeholder: 'Email Address' %>
    </div>
    <div class="actions">
      <%= f.submit yield(:button_text)%>
    </div>
  <% end %>
  <div class="form-secondary-action-section">
    Don't have an account? <%= link_to  "Sign up", signup_path %>
  </div>
</div>
